/* ========================================
   CAREER MANIFESTO - ZEN MODE INTERFACE
   ======================================== */

.manifesto-page {
  min-height: 100vh;
  width: 100%;
  background: var(--bg-main);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-xl) var(--space-lg);
}

/* ========================================
   BACKGROUND ORBS
   ======================================== */

.manifesto-bg {
  position: absolute;
  inset: 0;
  overflow: hidden;
  pointer-events: none;
}

.manifesto-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(120px);
  opacity: 0.25;
  animation: orbFloat 30s ease-in-out infinite;
}

.manifesto-orb-1 {
  width: 700px;
  height: 700px;
  background: radial-gradient(circle, rgba(0, 217, 255, 0.4), transparent 70%);
  top: -250px;
  right: -200px;
  animation-duration: 35s;
}

.manifesto-orb-2 {
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(184, 69, 255, 0.4), transparent 70%);
  bottom: -200px;
  left: -150px;
  animation-duration: 40s;
  animation-delay: 5s;
}

.manifesto-orb-3 {
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(246, 211, 101, 0.3), transparent 70%);
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation-duration: 45s;
  animation-delay: 10s;
}

/* ========================================
   PROGRESS BAR
   ======================================== */

.manifesto-progress-container {
  width: 100%;
  max-width: 900px;
  margin-bottom: var(--space-xl);
  position: relative;
  z-index: 1;
}

.manifesto-progress-bar {
  width: 100%;
  height: 8px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid var(--border-glass);
}

.manifesto-progress-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 12px;
  transition: width 0.6s var(--ease-soft);
}

.manifesto-progress-text {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.6);
  margin-top: var(--space-sm);
  text-align: center;
}

/* ========================================
   MAIN CONTAINER
   ======================================== */

.manifesto-container {
  width: 100%;
  max-width: 900px;
  position: relative;
  z-index: 1;
  animation: fade-up 0.8s var(--ease-soft);
}

/* ========================================
   REALM HEADER
   ======================================== */

.manifesto-header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.manifesto-realm-icon {
  font-size: 64px;
  margin-bottom: var(--space-md);
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.manifesto-realm-title {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: var(--space-sm);
}

.manifesto-realm-insight {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  font-style: italic;
}

/* ========================================
   QUESTION CARD
   ======================================== */

.manifesto-question-card {
  padding: var(--space-xl);
  margin-bottom: var(--space-xl);
  text-align: center;
}

.manifesto-question {
  font-size: 20px;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
}

/* ========================================
   ZEN MODE EDITOR
   ======================================== */

.manifesto-editor-container {
  padding: var(--space-xl);
  margin-bottom: var(--space-xl);
  position: relative;
}

.manifesto-editor {
  width: 100%;
  background: transparent;
  border: none;
  outline: none;
  color: rgba(255, 255, 255, 0.95);
  font-size: 18px;
  line-height: 1.8;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  resize: none;
  min-height: 200px;
  max-height: 500px;
  overflow-y: auto;
}

.manifesto-editor::placeholder {
  color: rgba(255, 255, 255, 0.3);
  font-style: italic;
}

.manifesto-editor::-webkit-scrollbar {
  width: 6px;
}

.manifesto-editor::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
}

.manifesto-editor::-webkit-scrollbar-thumb {
  background: rgba(0, 217, 255, 0.3);
  border-radius: 12px;
}

.manifesto-editor::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 217, 255, 0.5);
}

/* ========================================
   WORD COUNTER
   ======================================== */

.manifesto-word-counter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--space-md);
  padding-top: var(--space-md);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
}

.manifesto-word-count-met {
  color: #22c55e !important;
  font-weight: 600;
}

.manifesto-word-min {
  font-size: 13px;
}

/* ========================================
   AI NUDGE
   ======================================== */

.manifesto-ai-nudge {
  margin-top: var(--space-md);
  padding: var(--space-md) var(--space-lg);
  background: rgba(0, 217, 255, 0.05);
  border: 1px solid rgba(0, 217, 255, 0.2);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  gap: var(--space-md);
  animation: nudgePulse 2s ease-in-out infinite;
}

@keyframes nudgePulse {
  0%, 100% { opacity: 0.7; }
  50% { opacity: 1; }
}

.manifesto-ai-wave {
  width: 24px;
  height: 24px;
  background: radial-gradient(circle, var(--cyan), transparent);
  border-radius: 50%;
  animation: waveExpand 1.5s ease-out infinite;
}

@keyframes waveExpand {
  0% { transform: scale(0.8); opacity: 1; }
  100% { transform: scale(1.5); opacity: 0; }
}

.manifesto-ai-nudge p {
  font-size: 14px;
  color: var(--cyan);
  margin: 0;
}

/* ========================================
   NAVIGATION
   ======================================== */

.manifesto-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-lg);
}

.manifesto-btn {
  padding: var(--space-md) var(--space-xl);
  border-radius: var(--radius-md);
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s var(--ease-soft);
  border: none;
  outline: none;
}

.manifesto-btn-primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: 0 8px 24px rgba(0, 217, 255, 0.3);
}

.manifesto-btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 12px 32px rgba(0, 217, 255, 0.4);
}

.manifesto-btn-primary:disabled {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.4);
  cursor: not-allowed;
  box-shadow: none;
}

.manifesto-btn-secondary {
  background: rgba(255, 255, 255, 0.05);
  color: rgba(255, 255, 255, 0.9);
  border: 1px solid var(--border-glass);
}

.manifesto-btn-secondary:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.1);
  border-color: var(--border-glass-hover);
}

.manifesto-btn-secondary:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

/* ========================================
   REALM DOTS
   ======================================== */

.manifesto-realm-dots {
  display: flex;
  gap: var(--space-sm);
  align-items: center;
}

.manifesto-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s var(--ease-soft);
}

.manifesto-dot-active {
  width: 16px;
  height: 16px;
  background: var(--gradient-primary);
  box-shadow: 0 0 16px rgba(0, 217, 255, 0.6);
}

.manifesto-dot-completed {
  background: #22c55e;
}

/* ========================================
   ANALYZING STATE
   ======================================== */

.manifesto-analyzing {
  text-align: center;
  padding: var(--space-xxl) 0;
}

.manifesto-analyzing-animation {
  position: relative;
  width: 200px;
  height: 200px;
  margin: 0 auto var(--space-xl);
}

.manifesto-synapse {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 3px solid transparent;
  border-top-color: var(--cyan);
  border-radius: 50%;
  animation: synapseSpin 2s linear infinite;
}

.manifesto-synapse:nth-child(2) {
  border-top-color: var(--purple);
  animation-duration: 2.5s;
  animation-direction: reverse;
}

.manifesto-synapse:nth-child(3) {
  border-top-color: rgba(246, 211, 101, 0.8);
  animation-duration: 3s;
}

@keyframes synapseSpin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.manifesto-analyzing h2 {
  font-size: 32px;
  margin-bottom: var(--space-md);
}

.manifesto-analyzing p {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
}

/* ========================================
   RESPONSIVE
   ======================================== */

@media (max-width: 768px) {
  .manifesto-page {
    padding: var(--space-lg) var(--space-md);
  }

  .manifesto-realm-icon {
    font-size: 48px;
  }

  .manifesto-realm-title {
    font-size: 28px;
  }

  .manifesto-question {
    font-size: 18px;
  }

  .manifesto-editor {
    font-size: 16px;
  }

  .manifesto-nav {
    flex-direction: column;
    gap: var(--space-md);
  }

  .manifesto-btn {
    width: 100%;
  }

  .manifesto-realm-dots {
    order: -1;
  }
}

@media (prefers-reduced-motion: reduce) {
  .manifesto-orb,
  .manifesto-realm-icon,
  .manifesto-ai-wave,
  .manifesto-synapse {
    animation: none;
  }
}
